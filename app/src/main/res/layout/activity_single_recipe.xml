<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group8.tcss450.uw.edu.group8project.Activity.SingleRecipeActivity">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/vTitle"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/vTitle"
        android:layout_height="150dp"
        android:id="@+id/vIngredients" />

    <Button
        android:text="Save to favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Savebutton" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/vInstructions"
        android:scrollbars = "vertical"
        android:autoLink="web"
        android:layout_below="@+id/vIngredients"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="265dp" />

</RelativeLayout>